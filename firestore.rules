
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.id == userId;
    }
    
    match /parkingSlots/{parkingSlotId} {
      allow read: if true;
      allow write: if false; // Should be managed by a backend process
    }
    
    match /reservations/{reservationId} {
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /violations/{violationId} {
        allow get: if isSignedIn();
    }

    match /feedback/{feedbackId} {
      allow get: if isSignedIn();
    }
    
    // Authenticated users can create their own records
    match /reservations/{reservationId} {
       allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
       allow list: if isSignedIn(); // Allow owner to list all
    }

    match /violations/{violationId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list: if isSignedIn(); // Allow owner to list all
    }

    match /feedback/{feedbackId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list: if isSignedIn(); // Allow owner to list all
    }
  }
}
